# Top-most EditorConfig file
root = true

# ==========================
# ✨ Default for all files
# ==========================
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# ==========================
# 🧱 Java files
# ==========================
[*.java]
max_line_length = 120

# ==========================
# 🌐 XML, JSP, HTML
# ==========================
[*.{xml,jsp,html}]
indent_size = 2

# ==========================
# 🐳 Dockerfiles
# ==========================
[Dockerfile*]
indent_size = 2

# ==========================
# 🧾 Makefile
# ==========================
[Makefile]
indent_style = tab
